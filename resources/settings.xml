<settings>
	<setting id="username" type="text" label="Trakt Username" default=""/>
	<setting id="password" type="text" label="Trakt Password" default="" option="hidden"/>
    <setting id="use_https" type="bool" label="Use HTTPS" default="false"/>
    <setting id="TV_sub_slug" type="text" visible="false"/>
    <setting id="Movies_sub_slug" type="text" visible="false"/>
    <setting id="TV_fav_slug" type="text" visible="false"/>
    <setting id="Movies_fav_slug" type="text" visible="false"/>
    <setting id="tvshow-folder" type="folder" label="TV Show Folder"
             default="special://userdata/addon_data/plugin.video.salts/TVShows"/>
    <setting id="movie-folder" type="folder" label="Movie Folder"
             default="special://userdata/addon_data/plugin.video.salts/Movies"/>
	<setting id="calendar-day" type="slider" label="Default Calendar Start Day" default="0" range="-7,7" option="int"/>
	<setting id="parallel_mode" type="enum" label="Parallel Mode" values="Threads|Processes|None" default="0"/>
	<setting id="source_timeout" type="slider" label="Timeout to Get Sources (seconds) (0=No Limit)" default="5" range="0,120" option="int"/>
	<setting id="source_results" type="number" label="Maximum Results (0=No Limit)" default="0"/>
	<setting id="auto-update_subs" type="bool" label="Automatically Update Subscriptions" default="false"/>
	<setting id="update_subs-interval" type="slider" range=".5,.5,24" option="float" label="     Update Interval (hours)" default="2" visible="eq(-1,true)"/>
	<setting id="update_subs-during-startup" type="bool" label="     During StartUp?" default="false" visible="eq(-2,true)"/>
	<setting id="update_subs-during-playback" type="bool" label="     During Playback?" default="false" visible="eq(-3,true)"/>
	<setting id="include_movies" type="bool" label="     Include Movies" default="false" visible="eq(-4,true)"/>
	<setting id="enable_sort" type="bool" label="Sort Sources" default="false"/>
	<setting id="filter-unknown" type="bool" label="Drop hosters with unknown sort values" default="false" visible="eq(-1,true)"/>
	<setting id="source_sort_order" type="text" label="Source Sort Order" default="" visible="eq(-2,true)"/>
	<setting id="sort1_field" type="enum" label="1st Sort Key" values="None|Source|Quality|Views|Rating" default="0" visible="eq(-3,true)"/>
	<setting id="sort1_order" type="enum" label="1st Sort Key Order" values="Best to Worst|Worst to Best" default="0" visible="!eq(-1,0)"/>
	<setting id="sort2_field" type="enum" label="2nd Sort Key" values="None|Source|Quality|Views|Rating" default="0" visible="!eq(-2,0)"/>
	<setting id="sort2_order" type="enum" label="2nd Sort Key Order" values="Best to Worst|Worst to Best" default="0" visible="!eq(-1,0)+!eq(-3,0)"/>
	<setting id="sort3_field" type="enum" label="3rd Sort Key" values="None|Source|Quality|Views|Rating" default="0" visible="!eq(-2,0) + !eq(-4,0)"/>
	<setting id="sort3_order" type="enum" label="3rd Sort Key Order" values="Best to Worst|Worst to Best" default="0" visible="!eq(-1,0) + !eq(-3,0) + !eq(-5,0) "/>
	<setting id="sort4_field" type="enum" label="4th Sort Key" values="None|Source|Quality|Views|Rating" default="0" visible="!eq(-2,0) + !eq(-4,0) + !eq(-6,0)"/>
	<setting id="sort4_order" type="enum" label="4th Sort Key Order" values="Best to Worst|Worst to Best" default="0" visible="!eq(-1,0) + !eq(-3,0) + !eq(-5,0) + !eq(-7,0)"/>
</settings>